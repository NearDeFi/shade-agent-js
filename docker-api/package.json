{
    "type": "module",
    "name": "docker",
    "packageManager": "yarn@4.9.1",
    "scripts": {
        "phala:test": "phala cvms create --name shade-agent-api-test --compose ./docker-compose.yaml --env-file ./.env.development.local",
        "docker:test": "yarn docker:restart && sudo docker build --platform linux/amd64 -t myapp . && sudo docker run --platform linux/amd64 -p 3140:3140 --env-file .env.development.local --rm -e SHADE_AGENT_PORT=3140 myapp",
        "deploy:global": "node ../scripts/deploy-global.js",
        "docker:script": "node ../scripts/docker.js",
        "docker:prune": "sudo docker system prune",
        "docker:restart": "sudo systemctl restart docker",
        "docker:image": "sudo docker build --platform linux/amd64 --no-cache -t mattdlockyer/shade-agent-api:latest .",
        "docker:push": "sudo docker push mattdlockyer/shade-agent-api",
        "start": "yarn node app.js",
        "test": "yarn node test.js"
    },
    "dependencies": {
        "@hono/node-server": "^1.14.2",
        "@neardefi/shade-agent-js": "^0.2.1",
        "dotenv": "^16.5.0",
        "hono": "^4.7.10"
    }
}
